= render "shared/share_header"
.order-wrap  
  .order-container
    .order-mein.clearfix
      %section.order-content
        %h2.order-content__head 購入内容の確認
        %section.order-content__item
          .order-content__inner
            %h3.order-content__image
            %p.order-content__item-name
            .order-content__form
              %p.order-contet__price
                画像
                %span.order-content__fee
                  送料込み
              %ul.order-content__accordion
                %li.order-content__list
              %ul.order-content__table
                %li.order-content__youpay
                  .order-content__pricecell 支払い金額
                  .order-content__pricecells ¥1000           
        %section.order-content__info
          .order-content__inner
            %h3 配送先
            %h4 郵便番号
            %h5 名前
              
            %address.order-content__user
            = link_to new_sending_path, class: 'order-content__fix' do
              %span 変更する
              = icon 'fas', 'chevron-right' 
              
        %section.order-content__info{ id: 'order-bottom' }
          .order-content__inner
            %h3 支払方法
            
            
            %p.order-content__infotext
            = form_with model: @order, class: :order_form, local: true do |form| 
              %label
                %span
                = form.radio_button :pay, "現金"
                %span 現金
              %label
                %span.require
                = form.radio_button :pay, "カード"
                %span カード
                = link_to new_card_path, class: 'order-content__fixes' do
                  %span 登録する
                  = icon 'fas', 'chevron-right' 
            - if @default_card_information.blank?
              %br 
            - else
              -#以下カード情報を表示
              **** **** **** #{@default_card_information.last4}
              //- exp_month = @default_card_information.exp_month.to_s
              //- exp_year = @default_card_information.exp_year.to_s.slice(2,3)
              //= exp_month + " / " + exp_year
            %br
            
          .order-content__text
            = form_tag(action: :pay, method: :post) do
              %button.order-content__btn 購入する
= render "shared/footer_logo"