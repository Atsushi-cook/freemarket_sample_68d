= render "shared/share_header"
.order-wrap
  .order-container
    .order-mein.clearfix
      %section.order-content
        %h2.order-content__head 購入内容の確認
        %section.order-content__item
          .order-content__inner
            %h3.order-content__image
            %p.order-content__item-name
            .order-content__form
              %p.order-contet__price
                画像
                %span.order-content__fee
                  送料込み
              %ul.order-content__accordion
                %li.order-content__list
              %ul.order-content__table
                %li.order-content__youpay
                  .order-content__pricecell 支払い金額
                  .order-content__pricecells ¥1000           
        %section.order-content__info
          .order-content__inner
            %h3 配送先
            %h4 郵便番号
            %h5 名前
              
            %address.order-content__user
            = link_to new_sending_path(item_id: @item.id), class: 'order-content__fix' do
              %span 変更する
              = icon 'fas', 'chevron-right' 
              
        %section.order-content__info{ id: 'order-bottom' }
          .order-content__inner
            %h3 支払方法
            
            %p.order-content__infotext
            = form_with url: pay_orders_path, model: @order, class: :order_form, local: true do |f|
              = f.hidden_field :item_id, value: @item.id
              = f.hidden_field :sending_id, value: @sending.try(:id)
              - if @default_cards_information.nil?
                %li
                  %br
                  = @card_error_message
              - else
                - @default_cards_information.each_with_index do |card_information, i|
                  %li
                    %br
                    = f.radio_button :card_id, card_information.id
                    = "カード: #{i + 1}"
                    %br
                      &emsp;  **** **** **** #{card_information.last4}
                    - exp_month = card_information.exp_month.to_s
                    - exp_year = card_information.exp_year.to_s.slice(2,3)
                    = exp_month + " / " + exp_year
              = link_to new_card_path(item_id: @item.id), class: 'order-content__fixes' do
                %span 登録する
                = icon 'fas', 'chevron-right' 
              %br
              = f.submit "購入する", class: "order-content__btn"

= render "shared/footer_logo"