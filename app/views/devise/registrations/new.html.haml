.container

  .container__header
    %h1 
      %a{href: '#'}
  .container__main
  %h2 会員情報入力
  
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :ニックネーム
      %br/
      = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email"
    .field
      = f.label :パスワード
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password"
    -# .field
    -#   = f.label :password_confirmation
    -#   %br/
    -#   = f.password_field :password_confirmation, autocomplete: "new-password"

    .field
      = f.label :お名前（全角）
      %br/
      = f.text_field :firstname, autofocus: true, autocomplete: "firstname"
      = f.text_field :firstname, autofocus: true, autocomplete: "firstname"
      
    .field
      = f.label :お名前カナ（全角）
      %br/
      = f.text_field :lastname, autofocus: true, autocomplete: "lastname"
      = f.text_field :lastname, autofocus: true, autocomplete: "lastname"
      
    .field
      = f.label :生年月日
      %br/
      = f.text_field :birthday, autofocus: true, autocomplete: "birthday"
      = f.text_field :birthday, autofocus: true, autocomplete: "birthday"
      = f.text_field :birthday, autofocus: true, autocomplete: "birthday"
      
    .actions
      = f.submit "Sign up"

  = render "devise/shared/links"
